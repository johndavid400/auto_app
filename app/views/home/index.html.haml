%h1 Cars
%p
%table.table.table-bordered.table-striped
  %tr
    %th Make
  - @makes.each do |make|
    %tr{:id => "make_#{make.id}"}
      %td= make.name
    %tr{:id => "make_models_#{make.id}"}
      %td
        - make.models.each do |model|
          .model
            = image_tag(model.sample_image, size: "100x100")
            %p
            = model.name
            %p
      :javascript
        $(function() {
          $("#make_models_" + "#{make.id}").hide(); 
          $("#make_" + "#{make.id}").click(function(){
            $("#make_models_" + "#{make.id}").slideToggle(); 
          });
        });


